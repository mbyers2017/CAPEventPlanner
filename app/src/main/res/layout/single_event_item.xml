<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:id="@+id/single_event_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textStyle="bold"
                android:padding="10dip"
                android:textColor="#000000"/>
            <TextView android:id="@+id/single_event_date_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="normal"
                android:padding="10dip"
                android:textColor="#000000"
                android:text="@string/single_event_date_title"/>
            <TextView android:id="@+id/single_event_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="normal"
                android:padding="10dip"
                android:textColor="#000000"/>
            <TextView android:id="@+id/single_event_price_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="normal"
                android:padding="10dip"
                android:textColor="#000000"
                android:text="@string/single_event_price_title"/>
            <TextView android:id="@+id/single_event_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="normal"
                android:padding="10dip"
                android:textColor="#000000"/>
            <TextView android:id="@+id/single_event_description_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="normal"
                android:padding="10dip"
                android:textColor="#000000"
                android:text="@string/single_event_description_title"/>
            <TextView android:id="@+id/single_event_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="normal"
                android:padding="10dip"
                android:textColor="#000000"/>
            <TextView android:id="@+id/single_event_location_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="normal"
                android:padding="10dip"
                android:textColor="#000000"
                android:text="@string/single_event_location_title"/>
            <TextView android:id="@+id/single_event_location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="normal"
                android:padding="10dip"
                android:textColor="#000000"/>
            <TextView android:id="@+id/single_event_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="normal"
                android:padding="10dip"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/rsvp_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="@string/rsvp_event_button"/>
            <Button
                android:id="@+id/email_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="@string/email_event_button"/>
            <Button
                android:id="@+id/delete_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="@string/delete_event_button"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>